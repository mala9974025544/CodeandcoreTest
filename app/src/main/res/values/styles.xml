<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorPrimary</item>
		<item name="background">@color/colorWhite</item>

	</style>
	<!--Splash-->
	<style name="NostatusBarTheme" parent="AppTheme">
		<item name="android:windowTranslucentStatus">true</item>

	</style>
	<style name="AppToolbar" parent="ThemeOverlay.AppCompat.Light">
		<item name="android:textColorPrimary">@android:color/black</item>
		<item name="android:textColorSecondary">@android:color/black</item>
	</style>
	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="android:actionModeBackground">@android:color/white</item>
	</style>

	<style name="ThemeOverlay.MyDarkButton" parent="Base.ThemeOverlay.AppCompat.Dark">
		<item name="colorButtonNormal">@color/colorAccent</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="AppTheme.WhiteAccent">
		<item name="colorAccent">@color/colorAccent</item> <!-- Whatever color you want-->
	</style>
	<style name="AppTitle" parent="TextAppearance.AppCompat">
		<item name="android:textColor">@color/colorBlack</item>
		<item name="android:textSize">@dimen/text_14sp</item>
		<item name="android:fontFamily">sans-serif</item>

	</style>

	<style name="heading1" parent="TextAppearance.AppCompat">
		<item name="android:textColor">@color/black_alpha_1</item>
		<item name="android:textSize">@dimen/text_16sp</item>
		<item name="fontFamily">sans-serif-medium</item>
	</style>
	<style name="heading2" parent="TextAppearance.AppCompat">
		<item name="android:textColor">@color/colorRed</item>
		<item name="android:textSize">@dimen/text_14sp</item>
		<item name="fontFamily">sans-serif-medium</item>
	</style>
	<style name="heading3" parent="TextAppearance.AppCompat">
		<item name="android:textColor">@color/colorBlack</item>
		<item name="android:textSize">@dimen/text_13sp</item>
		<item name="fontFamily">sans-serif-condensed-medium</item>
	</style>
	<style name="heading4" parent="TextAppearance.AppCompat">
		<item name="android:textColor">@color/colorBlack</item>
		<item name="android:textSize">@dimen/text_12sp</item>
		<item name="fontFamily">sans-serif-light</item>
	</style>
	<style name="heading5" parent="TextAppearance.AppCompat">
		<item name="android:textColor">@color/colorWhite</item>
		<item name="android:textSize">@dimen/text_10sp</item>
		<item name="fontFamily">sans-serif-light</item>
	</style>
	<style name="heading6" parent="TextAppearance.AppCompat">
		<item name="android:textColor">@color/bottomNav</item>
		<item name="android:textSize">@dimen/text_10sp</item>
		<item name="fontFamily">sans-serif-light</item>
	</style>
</resources>